    <main class="container">
        {{#each files}}
            <div class="card">
                <h2 class="card__title">{{clearText file}}</h2>
                <div class="card__wrap">
                    {{#if model}}
                        <a class="card__link card__link--model" href="http://localhost:5050/templates/defaults/{{file}}"
                            target="_blank">
                            Default
                        </a>
                    {{/if}}
                    <a class="card__link card__link--template js--template" href="/?{{file}}" id="{{file}}">
                        Custom
                    </a>
                </div>
                <div class="card__swicth">
                    <input class="js-switch" type="checkbox" value="{{file}}-switch" id="{{file}}-switch" />
                    <label for="{{file}}-switch"></label>
                </div>
            </div>
        {{/each}}
    </main>
</body>

</html>